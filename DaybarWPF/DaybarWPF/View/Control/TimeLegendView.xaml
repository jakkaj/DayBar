<UserControl x:Class="DaybarWPF.View.Control.TimeLegendView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaybarWPF.View.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <TextBlock Text="{Binding Time}" Canvas.Left="{Binding Offset}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"></TextBlock>
    </Canvas>
</UserControl>
